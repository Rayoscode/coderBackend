form(action="productos", method="post",enctype="application/x-www-form-urlencoded") 
    div(class="formInputBlock") 
        label(for="title") Producto:
        input(type="text",name="title")
    div(class="formInputBlock") 
        label(for="price") Precio:
        input(type="number", name="price") 
    div(class="formInputBlock") 
        label(for="thumbnail") Imagen:
        input(type="text", name="thumbnail") 
    button(type="submit", class="formButton") Cargar